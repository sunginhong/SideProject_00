<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/lst_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingTop="10dp"
        android:paddingBottom="10dp" android:background="#FFFFFF" android:layout_marginBottom="1dp">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/imageThumb"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:scaleType="centerCrop" android:layout_marginLeft="15dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" tools:layout_editor_absoluteY="10dp"
                android:layout_marginLeft="20dp">
            <TextView
                    android:id="@+id/textSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="textSubTitle"
                    app:layout_constraintTop_toBottomOf="@+id/textTitle" android:textColor="#000000"/>
            <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="textTitle" android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
