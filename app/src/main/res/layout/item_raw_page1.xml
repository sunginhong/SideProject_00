<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainList_raw_p1_lst_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">

            <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="12dp" android:layout_marginLeft="30dp">

                <ImageView
                        android:id="@+id/mainList_raw_p1_imageThumb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@mipmap/ic_launcher_round"
                        android:scaleType="centerCrop"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/card_stroke"/>

            </android.support.v7.widget.CardView>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" tools:layout_editor_absoluteY="10dp"
                    android:layout_marginLeft="20dp">
                <TextView
                        android:id="@+id/mainList_raw_p1_textSubTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="subTitle"
                        app:layout_constraintTop_toBottomOf="@+id/mainList_raw_p1_textTitle"
                        android:textColor="#000000"/>
                <TextView
                        android:id="@+id/mainList_raw_p1_textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title" android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="#11000000"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
